<div class="row">
  <div class="col-md-10">
    <h3><%= @event.name %></h3>
  </div>
  <div class="col-md-2">
    <h3>
      <% if @event.owner == current_user %>
        <%= link_to "Edit", edit_event_path(@event), class: "btn btn-primary pull-right" %>
      <% end %>
    </h3>
  </div>
</div>
<hr>
<div>
  <div class="row">
    <div class="col-md-1">
      <b>Description:</b>
    </div>
    <div class="col-md-10">
      <%= @event.description %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-1">
      <b>Time:</b>
    </div>
    <div class="col-md-10">
      <%= @event.formatted_time %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-1">
      <b>Location:</b>
    </div>
    <div class="col-md-10">
      <%= link_to @event.location, "http://maps.google.com/?q=#{@event.latitude},#{@event.longitude}" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
      <%= link_to image_tag("https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=600x300&maptype=roadmap&markers=color:red%7C#{@event.latitude},#{@event.longitude}&key=#{Rails.application.secrets.google_static_maps_api_key}"), "http://maps.google.com/?q=#{@event.latitude},#{@event.longitude}" %>
    </div>
  </div>
</div>
