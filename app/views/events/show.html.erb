<h3><%= @event.name %></h3>
<hr>
<div>
  <div class="row">
    <div class="col-md-2">
      <b>Description:</b>
    </div>
    <div class="col-md-10">
      <%= @event.description %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <b>Time:</b>
    </div>
    <div class="col-md-10">
      <%= @event.formatted_time %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <b>Location:</b>
    </div>
    <div class="col-md-10">
      <%= @event.location %>
    </div>
  </div>
</div>
